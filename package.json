{
  "name": "snowblade-demo-app",
  "version": "1.0.0",
  "scripts": {
    "transpile:app": "tsc -p tsconfig.json",
    "bundle:app": "rollup -c rollup.config.js",
    "transpile:dom": "snowblade -c snowblade.config.js",
    "build": "npm-run-all transpile:app bundle:app transpile:dom clean",
    "clean": "rimraf dist/es2020",
    "watch": "nodemon --watch ./src/snowblade/ -e html --exec npx snowblade"
  },
  "keywords": [],
  "author": "Stephan Casas <stephancasas@icloud.com>",
  "license": "MIT",
  "description": "A demo application to showcase the capabilities of Snowblade",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@ryangjchandler/spruce": "^2.6.3",
    "@types/node": "^14.14.25",
    "alpinejs": "^2.8.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-terser": "^7.0.2",
    "snowblade": "^0.0.35",
    "typescript": "^4.1.3"
  }
}
